<Window x:Class="transportGreMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:transportGreMVVM"
        mc:Ignorable="d"
        Title="Transports La Métro Grenoble" Height="350" Width="500">
    <StackPanel Margin="10">
        <Label Background="DeepPink">Indiquez Votre Position</Label>
        <Label>Latutude :</Label>
        <TextBox Name="Lat"></TextBox>
        <Label>Longitude :</Label>
        <TextBox Name="Lon"></TextBox>
        <Label Background="DeepPink">Indiquez le rayon de Recherche</Label>
     
        <Label>Distance en mètres :</Label>
        <TextBox Name="Dist"></TextBox>
        <Button Background="Gold" Content="Chercher"/>

        
    </StackPanel>
</Window>
